<div class="lead">
  <% if @book.errors.any? %>
    <div style="color: red">
      <h1 class="display-6"><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h1>

      <ul>
        <% @book.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="card shadow mt-4 mb-5">
    <div class="card-body">
      <div class="row mb-3">
        <label for="skill-name" class="col-sm-2 col-form-label">Title</label>
        <div class="col-sm-10">
          <%= form.text_field :title, class: "form-control" %>
        </div>
      </div>

      <div class="row mb-3">
        <label for="skill-name" class="col-sm-2 col-form-label">Author</label>
        <div class="col-sm-10">
          <%= form.text_field :author, class: "form-control" %>
        </div>
      </div>

      <div class="row mb-3">
        <label for="skill-name" class="col-sm-2 col-form-label">Date Published</label>
        <div class="col-sm-10">
          <%= form.datetime_field :date_published, class: "form-control" %>
        </div>
      </div>

      <div class="row mb-3">
        <label for="skill-name" class="col-sm-2 col-form-label">Publisher</label>
        <div class="col-sm-10">
          <%= form.text_field :publisher_name, class: "form-control" %>
        </div>
      </div>
    </div>
  </div>
</div>
