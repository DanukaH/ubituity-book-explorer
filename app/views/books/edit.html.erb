<h2>Edit Book: <%= @book.title if @book.present? %></h2>

<%= form_with model: @book, url: csv_book_path(@csv, @book) do |form| %>
  <%= render "form", { form: form } %>

  <div class="row d-flex position-sticky bottom-0 bg-white justify-content-center zindex-sticky">
    <div class="col" >
      <div class="d-grid gap-2 d-md-flex justify-content-start">
        <%= form.submit("Save Changes", class: "btn btn-success") %>
        <%= link_to "Show", csv_book_path(@csv, @book), class:"btn btn-primary" %>
        <%= link_to "Back", csv_books_path(@csv), class: "btn btn-secondary" %>
      </div>
    </div>
  </div>
<% end %>
