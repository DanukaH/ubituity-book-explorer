<div class="mt-4 mb-5 w-50 mx-auto">
  <div class="card shadow">
    <h5 class="card-header">Log In</h5>

    <div class="card-body">

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <div class="mb-3 row">
            <label for="staticEmail" class="col-sm-3 col-form-label">Email</label>
            <div class="col-sm-8">
              <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
            </div>
          </div>
        </div>

        <div class="field">
          <div class="mb-3 row">
            <label for="staticEmail" class="col-sm-3 col-form-label">Password</label>
              <div class="col-sm-8">
                <%= f.password_field :password, class: "form-control", autocomplete: "current-password" %>
              </div>
            </div>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="row d-flex position-sticky py-3 bottom-0 bg-white bg-opacity-75 justify-content-center zindex-sticky">
          <div class="col" >
            <div class="d-grid gap-2 py-3 d-md-flex justify-content-center">
              <%= f.submit "Log in", class:"btn btn-success" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <p>
    <%= render "users/shared/links" %>
  </p>
</div>

