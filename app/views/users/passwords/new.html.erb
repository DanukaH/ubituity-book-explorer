<div class="mt-4 mb-5 w-50 mx-auto">
  <div class="card shadow lead">
    <h5 class="card-header fw-bold">Forgot your password?</h5>

    <div class="card-body">

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>

        <div class="field">
          <div class="mb-3 row">
            <label for="staticEmail" class="col-sm-3 col-form-label">Email</label>
              <div class="col-sm-8">
                <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
              </div>
          </div>
        </div>

        <div class="row d-flex position-sticky py-3 bottom-0 bg-white bg-opacity-75 justify-content-center zindex-sticky">
          <div class="col" >
            <div class="d-grid gap-2 py-3 d-md-flex justify-content-center">
              <%= f.submit "Send me reset password instructions", class:"btn btn-success" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <p class="lead">
    <%= render "users/shared/links" %>
  </p>
</div>